<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradientback"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="332dp"
            android:layout_height="39dp"
            android:layout_marginLeft="7dp"
            android:fontFamily="serif-monospace"
            android:text="New Product Details:"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="345dp"
            android:layout_marginLeft="7dp"
            android:layout_height="50dp"
            android:fontFamily="casual"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:background="#B3E5FC"
            android:id="@+id/etProdName"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:hint="Enter Product Name" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Category"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#E1F5FE"/>


            <Spinner
                android:id="@+id/cat"
                android:layout_width="180dp"
                android:background="#B3E5FC"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="Category"  />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="170dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Age of the product"
                android:fontFamily="casual"
                android:textSize="20sp"
                android:textColor="#E1F5FE"/>

            <Spinner
                android:id="@+id/sage"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:background="#B3E5FC"
                android:contentDescription="Category" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Price of the product"
                android:textColor="#E1F5FE"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/price"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="#B3E5FC"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Upload picture of the product"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#E1F5FE"/>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="#1565C0"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:text="UPLOAD"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:id="@+id/pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="80dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <EditText
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:fontFamily="casual"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:background="#B3E5FC"
                android:id="@+id/descript"
                android:textColor="@android:color/black"
                android:hint="Enter Product Description here"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="#1565C0"
            android:fontFamily="casual"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:onClick="addItem"/>


    </LinearLayout>

</ScrollView>