<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/product_list"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:paddingLeft="3dp"
    android:paddingBottom="3dp"
    android:paddingRight="3dp">

    <ImageView
        android:id="@+id/reqprodimg"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/sellertv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/seller"
        android:layout_marginTop="40dp"
        android:fontFamily="casual"
        android:text="Seller: "
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seller"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/sellertv"
        android:layout_toEndOf="@+id/reqprodimg"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="Seller Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyertv"
        android:layout_below="@+id/seller"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/reqprodimg"
        android:fontFamily="casual"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Buyer: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyer"
        android:layout_below="@+id/buyertv"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/reqprodimg"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="Buyer Name" />

    <TextView
        android:id="@+id/reqprodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reqprodimg"
        android:hint="Product"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sellertv"
        android:layout_below="@+id/seller"
        android:fontFamily="casual"
        android:layout_marginTop="65dp"
        android:text="Price:  "
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reqprodprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:hint="00000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/accbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="210dp"
        android:background="#00E676"
        android:fontFamily="casual"
        android:text="Accept"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <Button
        android:id="@+id/declbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/accbutton"
        android:background="#FF8A65"
        android:fontFamily="casual"
        android:text="Decline"
        android:textAllCaps="false"
        android:textStyle="bold" />

</RelativeLayout>
